<h2>Sign up</h2>

{% form 'register_customer' %}
  {% include 'folder/errors' %}

  <div><label for="user_email">Email</label><br>
  <input autofocus="autofocus" id="user_email" name="user[email]" type="email" class="required" required="required" aria-required="true" value="{% if form.user %}{{ form.user.email }}{% endif %}"></div>

  <div><label for="user_password">Password</label><br>
  <input id="user_password" name="user[password]" type="password" class="required" required="required" aria-required="true"></div>

  <div><label for="user_password_confirmation">Password confirmation</label><br>
  <input id="user_password_confirmation" name="user[password_confirmation]" type="password" class="required" required="required" aria-required="true"></div>

  <div><label for="user_user_profile_attributes_first_name">First Name</label><br>
  <input id="user_user_profile_attributes_first_name" name="user[user_profile_attributes][first_name]" class="required" required="required" aria-required="true" value="{% if form.user %}{{ form.user.user_profile_attributes.first_name }}{% endif %}"></div>

  <div><label for="user_user_profile_attributes_attributes_last_name">Last Name</label><br>
  <input id="user_user_profile_attributes_last_name" name="user[user_profile_attributes][last_name]" class="required" required="required" aria-required="true" value="{% if form.user %}{{ form.user.user_profile_attributes.last_name }}{% endif %}"></div>

  {% registration_field 'Phone' %}




  <div><input name="commit" type="submit" value="Sign up"></div>
{% endform %}
<a href="/users/login">Sign in</a><br>