<h2>THE BLOG INDEX</h2>

{% for blog in blogs %}
  <a href="{{ blog | blog_url }}">
    <h3>{{ blog.title }}</h3>
    <small>{{ blog.publish_date | distance_of_time }} by {{ blog.user.name }}. Tags: {{ blog.tag_sentence }}</small>
    <p>{{ blog | blog_image: '100x20#' }}</p>
    <p>{{ blog.description | truncate: 150 }}</p>
  </a>
{% endfor %}

{% for monthlyblogs in blogs_by_month %}
  <h3>{{ monthlyblogs.first }}</h3>
  <ul>
  {% for blog in monthlyblogs.last %}
    <li>{{ blog | blog_link }}</li>
  {% endfor %}
  </ul>
{% endfor %}

<h3>Categories</h3>
<ul>
{% for tag in tags %}
  <li>{{ tag | tag_link }}</li>
{% endfor %}
</ul>